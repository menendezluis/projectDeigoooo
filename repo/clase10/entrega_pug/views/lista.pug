body 
  a(
    href="/"
  )='Ir al formulario'
  h2='Vista de los Productos'
  if productos.length == 0
    h3='No hay productos.'
  else 
    table 
      tr 
        th='Nombre'
        th='Precio'
        th='Producto'
      each producto in productos 
        tr
          td=producto.title
          td=producto.price 
          td 
            img(
              src=producto.thumbnail
            ) 
